{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "module": "esnext",
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-jsx",
        "declaration": false,
        "strict": true,
        "lib": ["dom", "es2017", "es5", "es6", "es7"],
        "sourceMap": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "build",
        ".vscode",
        "coverage",
        ".npm",
        ".yarn"
    ],
    "include": ["src/**/*"],
    "typeAcquisition": {
        "enable": true,
        "include": ["node"]
    }
}
